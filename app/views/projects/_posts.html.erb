<% @posts.each do |post| %>
  <% if post.auto_generated %>
    <header class="timeline-header">
      <span class="tag is-medium <%= tag_color(post.updated_value) %>">
        <%= post.updated_value %>
      </span>
    </header>
  <% end %>
  <div class="timeline-item">
    <div class="timeline-marker is-icon">
      <i class="fa <%= icon_class(post.auto_generated) %>"></i>
    </div>
    <div class="timeline-content">
      <p class="heading"><%= post.created_at.strftime("%Y-%m-%d") %></p>
      
      <p class="<%= post_text_class(post.auto_generated) %>"><%= post.text %></p>

      <% if post.image.attached? %>
        <div class="columns">
          <div class="column is-half">
            <%= image_tag post.image, class: "post-image" %>
          </div>
        </div>
      <% end %>
    </div>
</div>
<% end %>