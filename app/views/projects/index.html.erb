<%= link_to "New Project", new_project_url(@project), class: "button is-primary is-large" %>
<div class="box content">
  <% @projects.each do |project| %>
    <article class="post">
    <h4>
    <%= link_to project.title, project_url(project) %>
    </h4>
    <div class="media">
      <div class="media-left">
      <% if project.posts[0] %>
        <p class="image is-32x32">
          <%= image_tag project.posts[0].image %>
        </p>
      <% end %>
      </div>
      <div class="media-content">
        <div class="content">
          <p>
            <%= project.created_at.strftime("%Y-%m-%d") %> &nbsp;
            <span class="tag"><%= project.category %></span>
            <span class="tag <%= status_class(project.status) %>">
              <%= project.status %>
            </span>
          </p>
        </div>
      </div>
      <div class="media-right">
        <span class="has-text-grey-light">
          <i class="fa fa-file"></i> <%= project.posts.count %>
        </span>
      </div>
    </div>
    </article>
<% end %>
