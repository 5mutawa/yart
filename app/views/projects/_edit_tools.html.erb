<div class="modal edit-tools-modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div class="card">
            <%= form_for(@project, url: {action: "update_tools"}) do |f| %>
            <p class="title is-5"><%= hook_title(@project.category) %></p>
            <input type="hidden" id="id" name="id" value="<%= @project.id %>" />
            <div class="field">
                <div class="control">
                    <%= f.text_field :hooks, class: "input", placeholder: "example: 3.75mm" %>
                </div>
            </div>


            <p class="title is-5">Yarns</p>
            <div class="field">
                <div class="control">
                    <%= f.text_area :yarns, class: "textarea", placeholder: "Describe your yarns, the colors, materials .. etc" %>
                </div>
            </div>

            <p class="title is-5">Pattern</p>
            <div class="field">
                <div class="control">
                    <%= f.text_field :pattern, class: "input", placeholder: "example: https://www.ravelry.com/patterns/library/sunday-folk-hexie" %>
                </div>
            </div>

            <div class="field">
                <div class="control submit">
                    <%= f.submit "Update Tools", class: "button is-primary" %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
