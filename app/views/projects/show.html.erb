<div class="box content">
  <div class="timeline">
    <header class="timeline-header">
      <span class="tag is-medium is-primary">New project</span>
    </header>
    <div class="timeline-item">
      <div class="timeline-marker"></div>
      <div class="timeline-content">
        <p class="heading"><%= @project.created_at.strftime("%Y-%m-%d") %></p>
        <p><%= @project.title %></p>
        <% unless @project.tools.empty? %>
          <p>Tools: <%= @project.tools[0].name %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>