<div class="card post-card">
  <div class="header">
    <div class="media">
      <div class="media-left">
          <figure class="image is-48x48 user-avatar">
              <%= user_avatar(@project.user) %>
          </figure>
      </div>
      <div class="media-content">
          <p class="title is-4"><%= @project.title %></p>
      </div>
    </div>
    <%= render "update_fields" %>
  </div>
</div>

<div class="box content">
  <%= render "tools" %>
  <div class="timeline">
    <header class="timeline-header">
      <span class="tag is-medium is-success"><%= Project::Status::NEW%></span>
    </header>
    <div class="timeline-item">
      <div class="timeline-marker is-success is-icon">
        <i class="fa fa-plus"></i>
      </div>
      <div class="timeline-content">
        <p class="heading"><%= @project.created_at.strftime("%Y-%m-%d") %></p>
        <p class="has-text-grey"><%= @project.user.username %> started a new project</p>
        <% unless @project.tools.empty? %>
          <p>Tools: <%= @project.tools[0].name %></p>
        <% end %>
      </div>
    </div>

    <%= render "posts" %>

  </div>
</div>
