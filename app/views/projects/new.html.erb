<div class="box card">
  <% if flash[:errors] %>
      <div class="notification is-danger">
          <ul>
              <% flash[:errors].each do |m| %>
                  <li><%= m %></li>
              <% end %>
          </ul>
      </div>
  <% end %>
  <%= form_for(@project, url: {action: "create"}) do |f| %>
      <div class="field">
          <div class="control is-expanded">
              <%= f.text_field :title, class: "input", placeholder: "Name" %>
          </div>
      </div>
      <div class="field">
        <div class="control is-expanded">
          <div class="select is-fullwidth">
            <%= f.select :category do %>
              <option disabled selected>Category:</option>
              <% @categories.each do |c| -%>
                <%= content_tag(:option, c, value: c) %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="field">
          <div class="control">
              <%= f.submit "Create", class: "button is-primary" %>
          </div>
      </div>
  <% end %>
</div>
