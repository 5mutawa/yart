<section class="hero is-success is-fullheight">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <div class="box">
                    <figure class="avatar">
                        <%= image_tag "logo-circle.png" %>
                    </figure>
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                        <div class="notification is-danger"><%= alert %><%= devise_error_messages! %></div>
                        <div class="field">
                            <div class="control">
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input is-large", placeholder: "Email" %>
                            </div>
                        </div>
                        <%= f.submit "Send me reset password instructions", class:"button is-block is-info is-large is-fullwidth" %>
                    <% end %>
                </div>
                <p class="has-text-grey">
                    <%= render "devise/shared/links" %>
                </p>
            </div>
        </div>
    </div>
</section>
